{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "gpu",
      "args": {
        "cmd": ["./cuda_check"],
        "image": "registry.hub.docker.com/nosana/stats:v1.1.4",
        "gpu": true
      }
    },
    {
      "type": "container/run",
      "id": "disk-space",
      "args": {
        "cmd": "df -m --output=avail --total | awk 'END {print $1}';",
        "image": "registry.hub.docker.com/nosana/stats:v1.0.7",
        "env": {
          "DEBUG": "1"
        }
      }
    }
  ]
}
